<div class="relative items-start justify-between rounded-xl border border-gray-100 p-4 shadow-xl sm:p-6 lg:p-8 mx-auto w-[70%] bg-white mt-4">
  <div class="float-left">
    <%= form_with url: all_keywords_path, data: { turbo: false }, class: "flex relative", method: :get do |f| %>
      <%= f.text_field :search, class: "form-input pr-[37px]", value: params[:search]%>
      <button type="submit" class="text-xl absolute right-[10px] top-[5px]">
          <i class='fa-solid fa-magnifying-glass'></i>
      </button>
    <% end %>
  </div>
  <%= link_to "Create new one", new_keyword_path, class: "btn btn-blue mb-4 float-right"%>
  <table class="table-responsive">
    <thead>
      <tr>
        <th></th>
        <th></th>
        <th>Keyword</th>
      </tr>
    </thead>
    <tbody>
      <% @keywords.each do |keyword| %>
        <tr>
          <td class="w-0"><%= link_to "<i class='fa-regular fa-pen-to-square'></i>".html_safe, edit_keyword_path(keyword.id), class: "text-xl text-sky-600"%></td>
          <td class="w-0"><%= link_to "<i class='fa-regular fa-trash-can'></i>".html_safe, keyword_path(keyword.id), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete the translation?" }, class: "text-xl text-red-600" %></td>
          <td><%= keyword.word%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= render "shared/pagination_bar" %>
</div>
