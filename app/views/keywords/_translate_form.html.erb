<div class="nested-form-wrapper p-4 bg-[#cedae0] rounded-xl mt-2" data-new-record="<%= f.object.new_record? %>">
  <div class="">
    <p class="form-label"> Cevirisi </p>
    <%= f.text_field :translated, class: "form-input" %>
  </div>

  <div class="mt-2">
    <p class="form-label"> Aciklama </p>
    <%= f.text_field :description, class: "form-input" %>
  </div>

  <div class="flex justify-between mt-2">
    <div class="w-1/2 pr-1">
      <p class="form-label"> Sinifi </p>
      <div class="flex flex-wrap">
        <% word_classes.each do |item| %>
          <p class="m-2"><%= f.check_box :word_class, { multiple: true, class: "form-tick appearance-none bg-white bg-check h-6 w-6 border border-gray-300 rounded-md checked:bg-blue-500 checked:border-transparent focus:outline-none mr-3" }, item, false %><%= item%></p>
        <% end %>
      </div>
    </div>
    <div class="w-1/2 pl-1">
      <p class="form-label"> Kategori </p>
      <% f.text_field :category, class: "form-input" %>
      <%= f.select :category, options_for_select(Translate.categories.map {|key, value| [key.titleize, Translate.categories.key(value)]}, f.object.category), {}, class: "form-input" %>
    </div>
  </div>

  <button type="button" data-action="nested-form#remove" class="btn btn-red mt-2">Remove</button>

  <%= f.hidden_field :_destroy %>
</div>
